<Window x:Class="UnixLauncher.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnixLauncher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <!-- Фон окна -->
        <Border Background="#FF2D2D30" CornerRadius="10">
            <Grid>
                <!-- Панель с кнопками управления окном -->
                <DockPanel Height="30" VerticalAlignment="Top" Background="#FF2D2D30" Name="DockPanel">
                    <Button Content="X" DockPanel.Dock="Right" Width="30" Background="Transparent" Foreground="White"
                            Click="CloseButton_Click" />
                    <TextBlock Text="Unix launcher" VerticalAlignment="Center" Foreground="White" Margin="10,0,0,0"/>
                </DockPanel>

                <!-- Основное содержимое окна -->
                <StackPanel Margin="10,40,10,10">
                    <TextBlock Text="Привет человеку, нашедшему этот прототип." FontSize="16" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
